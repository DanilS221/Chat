<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    tools:context=".SetupProfileActivity">
    <TextClock
        android:textAlignment="center"
        android:layout_marginTop="19dp"
        android:textSize="26sp"
        android:textStyle="bold|normal"
        android:textColor="#5198E4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_marginTop="32dp"
        android:src="@drawable/avatar"

        android:layout_width="150dp"
        android:layout_height="150dp"/>
    <TextView
        android:text="Настройка профиля"
        android:textAlignment="center"
        android:layout_marginTop="19dp"
        android:textSize="26sp"
        android:textStyle="bold|normal"
        android:textColor="#5198E4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Укажите ФИО и по желанию загрузите аватар"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold|normal"
        android:textColor="#3C4F5C"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:padding="15dp"
            android:background="@color/white"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/nameBox"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/background_shape"
                android:ems="1"
                android:hint="Введите свое ФИО"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="#1C1C1C"
                android:textSize="20sp"
                android:textStyle="bold|normal" />
            <Button
                android:id="@+id/continueBtn02"
                android:text="Сохранить профиль"
                android:textStyle="bold|normal"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:backgroundTint="#5198E4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>